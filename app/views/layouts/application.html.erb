<!DOCTYPE html>
<html>
  <head>
    <title>Pintoit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript"> window.logo="<%= image_url('pintoit_logo.png') %>"</script>
    <% if current_user %>
        <script>
          window.currentUser = {
            'id': '<%= current_user.id %>',
            'email': '<%= current_user.email %>'
          }
        </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
